body{background:#fefefe;color:#111;font-family:-apple-system,helvetica neue,Arial,pingfang sc,hiragino sans gb,STHeiti,microsoft yahei,microsoft jhenghei,source han sans sc,noto sans cjk sc,source han sans cn,noto sans sc,source han sans tc,noto sans cjk tc,wenquanyi micro hei,SimSun,sans-serif;font-size:13px;line-height:1.8}#wrapper{max-width:1e3px;margin:auto;padding-top:9px}#mast{z-index:-30}#nav{float:right;display:block;font-size:14px;text-align:left;padding:5px;padding-right:20px;margin:5px}#nav a{padding:5px}a{padding:1px;font-weight:800;text-decoration:none;color:#111}a:hover{background-color:#513c94;color:#fefefe!important}#title{max-width:200px;display:inline-block;text-align:center;font-size:20px;font-weight:800;letter-spacing:-1px}#content{padding:20px}#bay{position:absolute;top:0;left:25%;padding:none!important;z-index:-50}#subtitle{text-align:center;color:#513c94;margin-left:50px;margin-top:-5px;font-size:20px}h1{font-size:20px;text-align:center;font-weight:800}h2{color:#513c94;font-size:13px}h3{font-size:13px;color:#444;-webkit-transition:color 1s;transition:color 1s;font-weight:400}h3:hover{color:#425793}img{max-width:100%}#posts{margin:0;padding:0}#square{color:#425793;overflow:hidden!important;height:125px;width:300px;font-weight:800;font-size:36px;margin:auto}#strip{position:fixed;top:0;left:0;width:100%;background:linear-gradient(to right,#425793,#513c94,#723c94,#943c66);height:7px}blockquote{border-left:3px solid #723c94;padding-left:40px;color:#2e244c}